<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.MaterialComponents">
        <!-- Customizd
        e your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:colorBackground">@color/colorPrimaryDark</item>
    </style>

    <style name="DialogTheme" parent="Base.Theme.MaterialComponents.Dialog">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="showTitle">false</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>
    <style name="DatePickerDialogTheme" parent="Base.Theme.MaterialComponents">
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="showTitle">false</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:colorForeground">@android:color/holo_blue_dark</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
